{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts", "test/**/*.ts", "../server/types.ts"]
}
